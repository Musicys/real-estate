
/* 居中布局 */
.center{
    display: flex;
    justify-content: center;
    align-items: center;
}
/* 上下对齐 */
.flex-top{
    display: flex;
    flex-direction: column;
	align-items: center;
    justify-content: space-between;
}
/* 上下对齐 */
.flex-top-start{
    display: flex;
    flex-direction: column;
    justify-content: start;
	align-items: center;
}
/* 左右对齐 */
.flex-left{
    display: flex;
     flex-direction: row;
    justify-content: space-between;
	align-items: center;
}
